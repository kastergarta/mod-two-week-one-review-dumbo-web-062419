<div style="text-align: center;">
<h1><%= @sea.name %></h1>

<h2>Temperature: <%= @sea.temperature %></h2>
<h2>Bio: <%= @sea.bio %></h2>
<img src="<%= @sea.image_url %>" alt="">
<h2>Mood <%= @sea.mood %></h2>
<h2>Favorite Color<%= @sea.favorite_color %></h2>
<h2>Scariest Creature<%= @sea.scariest_creature %></h2>
<h2>Any mermaids?<%= @sea.has_mermaids %></h2>

<h1><%= link_to "All Seas", seas_path %></h1>
<h1><%= link_to "UPDATE", edit_sea_path %></h1>
<h1><%= button_to "DELETE", sea_path(@sea), method: :delete %></h1>


</div>
